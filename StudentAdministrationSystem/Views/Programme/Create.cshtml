@model StudentAdministrationSystem.Models.ProgrammeModel

@{
    ViewBag.Title = "Create";
    Layout = "_Layout";
}

<!DOCTYPE html>
<html>
   <head>
      <meta name = "viewport" content = "width = device-width" />
      <title>Edit</title>
   </head>
	
   <body>
      @using (Html.BeginForm()){
         @Html.AntiForgeryToken()
         <div class = "form-horizontal">
            <h4>Programme</h4>
            <hr />
            @Html.ValidationSummary(
               false, "", new { @class = "text-danger" })

            <div class = "form-group">
               <label class="control-label col-md-2">
                     Program Title
                  </label>
               <div class = "col-md-10">
                  @Html.TextBoxFor(m => m.ProgrammeTitle, new { @class = "form-control input-height", placeholder = "Enter Program Title" })
                  @Html.ValidationMessageFor(model => model.ProgrammeTitle, "", new{
                        @class = "text-danger" })
               </div>
            </div>
				
            <div class = "form-group">
                  <label class="control-label col-md-2">
                    Program Duration
                  </label>
                  <div class = "col-md-10">
                    @Html.TextBoxFor(m => m.ProgrammeDuration, new { @class = "form-control input-height", placeholder = "Enter Program Duration" })
                    @Html.ValidationMessageFor(model => model.ProgrammeDuration, "", new{ @class = "text-danger" })
                  </div>
            </div>
            
            <div class = "form-group">
               <div class = "col-md-offset-2 col-md-10">
                  <input type = "submit" value = "Save" class = "btn btn-default"/>
               </div>
            </div>
				
         </div>
      }
		
      <div>
         @Html.ActionLink("Back to List", "Index")
      </div>
		
   </body>
</html>
