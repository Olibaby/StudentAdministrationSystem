@model StudentAdministrationSystem.Models.AssessmentModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
   <head>
      <meta name = "viewport" content = "width = device-width" />
      <title>Create</title>
   </head>
	
   <body>
      @using (Html.BeginForm()){
         @Html.AntiForgeryToken()
         <div class = "form-horizontal">
            <h4>Assessment</h4>
            <hr />
            @Html.ValidationSummary(
               false, "", new { @class = "text-danger" })

            <div class = "form-group">
               <label class="control-label col-md-2">
                  Assessment Title
               </label>
               <div class = "col-md-10">
                  @Html.TextBoxFor(m => m.AssessmentTitle, new { @class = "form-control input-height", placeholder = "Enter Assessment Title" })
                  @Html.ValidationMessageFor(model => model.AssessmentTitle, "", new{
                     @class = "text-danger" })
               </div>
            </div>
            
            <div class = "form-group">
               <label class="control-label col-md-2">
                  Assessment Max Score
               </label>
               <div class = "col-md-10">
                  @Html.TextBoxFor(m => m.AssessmentMaxScore, new { @class = "form-control input-height", placeholder = "Assessment Max Score" })
                  @Html.ValidationMessageFor(model => model.AssessmentMaxScore, "", new{
                     @class = "text-danger" })
               </div>
            </div>
            
            <div class = "form-group">
                  <label class="control-label col-md-2">
                    Module
                  </label>
                  <div class = "col-md-10">
                    @Html.DropDownListFor(m=>m.ModuleId, (IEnumerable<SelectListItem>)ViewBag.modules,"Select one",new { @class = "form-control input-height", placeholder = "Select Module" })
                    @Html.ValidationMessageFor(model => model.ModuleId, "", new{ @class = "text-danger" })
                  </div>
            </div>
            
            <div class = "form-group">
               <div class = "col-md-offset-2 col-md-10">
                  <input type = "submit" value = "Save" class = "btn btn-default"/>
               </div>
            </div>
				
         </div>
      }
		
      <div>
         @Html.ActionLink("Back to List", "Index")
      </div>
		
         <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.1/jquery.min.js" integrity="sha512-aVKKRRi/Q/YV+4mjoKBsE4x3H+BkegoM/em46NNlCqNTmUYADjBbeNefNxYV7giUp0VxICtqdrbqU7iVaeZNXA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
         @if (TempData["Message"] != null)
         {
            <script type="text/javascript">  
                     window.onload = function () {  
                         alert("@TempData["Message"]");  
                     };  
                 </script>
         }

   </body>
</html>
