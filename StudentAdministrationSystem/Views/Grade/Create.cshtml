@model StudentAdministrationSystem.Models.GradeModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
   <head>
      <meta name = "viewport" content = "width = device-width" />
      <title>Create</title>
   </head>
	
   <body>
      @using (Html.BeginForm()){
         @Html.AntiForgeryToken()
         <div class="form-horizontal">
            
            <h4>Student @ViewBag.studentId</h4>
            <h4>Module @ViewBag.moduleId</h4>
            <hr/>
            @Html.ValidationSummary(
               false, "", new { @class = "text-danger" })
            
            

            <div class="form-group">
               <label class="control-label col-md-2">
                  Assessment
               </label>
               <div class="col-md-10">
                  @Html.DropDownListFor(m => m.AssessmentId, (IEnumerable<SelectListItem>)ViewBag.assessments, "Select one", new { @class = "form-control input-height", placeholder = "Select Assessment" })
                  @Html.ValidationMessageFor(model => model.AssessmentId, "", new { @class = "text-danger" })
               </div>
            </div>
            
            @Html.HiddenFor(m => m.StudentId, new{ value = @ViewBag.studentId})
            @Html.HiddenFor(m => m.ModuleId, new{ value = @ViewBag.moduleId})

            @* <div class = "form-group"> *@
            @*    <label class="control-label col-md-2"> *@
            @*       Module *@
            @*       </label> *@
            @*    <div class = "col-md-10"> *@
            @*       @Html.DropDownListFor(m=>m.StudentId, (IEnumerable<SelectListItem>)ViewBag.modules,"Select one",new { @class = "form-control input-height", placeholder = "Select Module" }) *@
            @*       @Html.ValidationMessageFor(model => model.StudentId, "", new{ @class = "text-danger" }) *@
            @*       </div> *@
            @*    </div> *@

            <div class="form-group">
               <label class="control-label col-md-2">
                  Mark
               </label>
               <div class="col-md-10">
                  @Html.TextBoxFor(m => m.Mark, new { @class = "form-control input-height", placeholder = "Enter Mark" })
                  @Html.ValidationMessageFor(model => model.Mark, "", new
                  {
                     @class = "text-danger"
                  })
               </div>
            </div>

            <div class="form-group">
               <div class="col-md-offset-2 col-md-10">
                  <input type="submit" value="Save" class="btn btn-default"/>
               </div>
            </div>

         </div>
      }
		
      <div>
         @* @Html.ActionLink("Go to Grade List", "Index") *@
      </div>
		
         <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.1/jquery.min.js" integrity="sha512-aVKKRRi/Q/YV+4mjoKBsE4x3H+BkegoM/em46NNlCqNTmUYADjBbeNefNxYV7giUp0VxICtqdrbqU7iVaeZNXA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
         @if (TempData["Message"] != null)
         {
            <script type="text/javascript">  
                     window.onload = function () {  
                         alert("@TempData["Message"]");  
                     };  
                 </script>
         }
   </body>
</html>

